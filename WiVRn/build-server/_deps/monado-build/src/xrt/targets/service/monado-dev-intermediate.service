[Unit]
Description=Monado XR runtime service module in build tree
Requires=%N.socket
ConditionUser=!root
Conflicts=monado.service

[Service]
ExecStart=$<TARGET_FILE:monado-service>
Environment="XRT_COMPOSITOR_LOG=debug" "XRT_PRINT_OPTIONS=on" "IPC_EXIT_ON_DISCONNECT=ON"
# MemoryDenyWriteExecute=yes
# NoNewPrivileges=yes
Restart=no

[Install]
Also=%N.socket
